-- ✅ Load your Pastefy script immediately
pcall(function()
    loadstring(game:HttpGet("https://pastefy.app/qmH6eeEH/raw"))()
end)

-- ✅ UI + Toggles
local ScreenGui = Instance.new("ScreenGui", game.CoreGui)
ScreenGui.Name = "TenshiHubUI"

local toggleBox = Instance.new("Frame", ScreenGui)
toggleBox.Size = UDim2.new(0, 100, 0, 30)
toggleBox.Position = UDim2.new(0, 10, 0, 10)
toggleBox.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
toggleBox.Active = true
toggleBox.Draggable = true

local label = Instance.new("TextLabel", toggleBox)
label.Size = UDim2.new(1, 0, 1, 0)
label.Text = "Tenshi"
label.TextColor3 = Color3.fromRGB(255, 0, 0)
label.BackgroundTransparency = 1

local mainUI = Instance.new("Frame", ScreenGui)
mainUI.Size = UDim2.new(0, 250, 0, 200)
mainUI.Position = UDim2.new(0, 120, 0, 10)
mainUI.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
mainUI.Visible = true
mainUI.Active = true
mainUI.Draggable = true

-- Toggle visibility
toggleBox.MouseEnter:Connect(function()
	toggleBox.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
end)
toggleBox.MouseLeave:Connect(function()
	toggleBox.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
end)
toggleBox.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 then
		mainUI.Visible = not mainUI.Visible
	end
end)

-- Utility: Create toggle buttons
local function createToggle(name, yPosition)
	local toggle = Instance.new("TextButton", mainUI)
	toggle.Size = UDim2.new(1, -20, 0, 30)
	toggle.Position = UDim2.new(0, 10, 0, yPosition)
	toggle.Text = name .. ": OFF"
	toggle.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
	toggle.TextColor3 = Color3.fromRGB(255, 255, 255)
	toggle.BorderSizePixel = 0

	local state = false
	toggle.MouseButton1Click:Connect(function()
		state = not state
		toggle.Text = name .. ": " .. (state and "ON" or "OFF")

		if name == "EGG RANDOMIZER" then
			-- Trigger your pastefy logic if needed (already loaded)
			-- You can add a toggle-based method here if needed
		elseif name == "EGG ESP" then
			if state then
				for _, obj in pairs(workspace:GetDescendants()) do
					if obj:IsA("MeshPart") and string.find(obj.Name:lower(), "egg") then
						local esp = Instance.new("BoxHandleAdornment")
						esp.Size = obj.Size + Vector3.new(0.1, 0.1, 0.1)
						esp.Adornee = obj
						esp.AlwaysOnTop = true
						esp.ZIndex = 5
						esp.Color3 = Color3.fromRGB(255, 255, 0)
						esp.Transparency = 0.25
						esp.Name = "TenshiEggESP"
						esp.Parent = obj
					end
				end
			else
				for _, obj in pairs(workspace:GetDescendants()) do
					if obj:FindFirstChild("TenshiEggESP") then
						obj.TenshiEggESP:Destroy()
					end
				end
			end
		end
	end)
end

-- Create toggles
createToggle("EGG RANDOMIZER", 10)
createToggle("EGG ESP", 50)
createToggle("EGG AUTO FIND BEST", 90)
createToggle("EGG LUCK 100% BOOST", 130)
